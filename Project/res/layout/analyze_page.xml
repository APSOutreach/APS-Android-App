<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black" >
    
    <TextView
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/analyze"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:background="@drawable/customnavbg" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/white" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/inst"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_red">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:scaleType="fitXY"
        android:id="@+id/compareImage"
        android:padding="5dp"/>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:scaleType="fitXY"
        android:id="@+id/spectrum"
        android:padding="5dp"
        android:src="@drawable/aluminum" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="5"
        >
        
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrows_blue" 
            android:id="@+id/left"
            android:background="@null"
            android:layout_weight="1"/>
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spectra_name"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_weight="3" />
        
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrows_yellow"
            android:id="@+id/right"
            android:background="@null"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spectrum_description"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:gravity="center_horizontal" />
        
        </ScrollView>
    </LinearLayout>

</LinearLayout>
